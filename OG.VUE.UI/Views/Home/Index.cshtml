@{
    ViewBag.Title = "Home Page";
}
<div class="row" id="app">
    <br />
    <br />
    <div class="col-lg-12">
        <div class="form-inline">
            <input type="text" class="form-control" v-model="newNombre"/>
            <input type="number" class="form-control" v-model="newEdad" />
            <button class="btn btn-primary" v-on:click="addPersona">Agregar</button>
            <button class="btn btn-primary" v-on:click="limpiar">Limpiar</button>
        </div>
    </div>
    <br />
    <br />
    <div class="col-lg-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in lista">
                    <td>{{item.Id}}</td>
                    <td>{{item.Nombre}}</td>
                    <td>{{item.Edad}}</td>
                    <td><button class="btn btn-danger" v-on:click="deletePersonas(item.Id)">Eliminar</button></td>
                    <td><button class="btn btn-success" v-on:click="editPersonas(item)">Editar</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/Index.js"></script>
}